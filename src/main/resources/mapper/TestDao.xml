<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unual.anime.dao.TestDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="getMoneyById" resultType="int">
        <!-- 具体的sql -->
        SELECT
        money
        FROM
        money_table
        WHERE
        id = #{0}
    </select>

    <select id="updateMoneyById" resultType="int">
        <!-- 具体的sql -->
        UPDATE
        money_table
        SET
        money = #{1}
        WHERE
        id = #{0}
    </select>

    <select id="insertMoneyRecordById" resultType="int">
        <!-- 具体的sql -->
        INSERT INTO
        record_table(id,record_time)
        VALUES
        (#{0},#{1})
    </select>


</mapper>