<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unual.anime.dao.AnimeVideoDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="queryById" resultType="AnimeVideo" parameterType="int">
        select
            anime_id,
            video_id,
            video_name,
            video_page,
            video_url,
            video_type
        from
            anime_video
        where
            anime_id = #{animeId}
        order by
            video_id
        LIMIT #{page}, #{limit}
    </select>
</mapper>